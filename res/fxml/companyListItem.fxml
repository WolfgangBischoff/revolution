<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.control.Label?>
<?import java.net.URL?>
<GridPane xmlns:fx="http://javafx.com/fxml" fx:id="gridpane" >
    <stylesheets>
        <URL value="@/css/companyListItem.css"/>
    </stylesheets>

        <VBox fx:id="content">
            <HBox>
                <Text fx:id="companyName" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            </HBox>

            <HBox spacing="5">
                <Label text="Employees:"/>
                <Text fx:id="numberEmployees" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
            </HBox>

            <HBox spacing="5">
                <Label text="Deposit:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <Text fx:id="companyDeposit" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                <Label text="Number Workplaces:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <Text fx:id="numberWorkplaces"/>
            </HBox>
        </VBox>

</GridPane>
