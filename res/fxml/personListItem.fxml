
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Button?>

<?import javafx.scene.layout.HBox?>

<?import javafx.scene.layout.VBox?>
<GridPane xmlns:fx="http://javafx.com/fxml" fx:id="gridpane" hgap="5">

    <HBox>
        <VBox>
            <HBox>
                <Text fx:id="name" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <Text fx:id="age" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
            </HBox>
            <HBox>
                <Text text="Deposit: " GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <Text fx:id="deposit" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            </HBox>
        </VBox>
    </HBox>

</GridPane>
