<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<GridPane xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10"
          fx:controller="Core.GuiController.societyOverviewController">

    <Text text="Society Overview" fx:id="headline"
          GridPane.columnIndex="0" GridPane.rowIndex="0"
          />

    <Label text="Number Persons"
          GridPane.columnIndex="0" GridPane.rowIndex="1"
          />

    <Text text="#placeholder"
           GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="Avg gross income"
           GridPane.columnIndex="0" GridPane.rowIndex="2"
    />

    <Text text="#NumberPeople" fx:id="numberPeople"
          GridPane.columnIndex="1" GridPane.rowIndex="2"/>


    <Button fx:id="populateSociety" text="Populate Society" GridPane.columnIndex="0" GridPane.rowIndex="3" onAction="#populate"/>

    <Button fx:id="BttnbackToMenu" text="Back to Menu"
            GridPane.columnIndex="1" GridPane.rowIndex="4"
            onAction="#backToMenu"
    />
</GridPane>
